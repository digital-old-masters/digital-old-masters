---
/* src/layouts/Layout.astro - Hybrid Schema Ready */
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';

interface Props {
    title: string;
    description?: string;
    image?: string;
    artDate?: string;
    location?: string;
    breadcrumbs?: { label: string, href: string }[];
    frontmatter?: any;
    /* 【追加】外部から注入される「完全なJSON-LD」を受け取る口 */
    structuredData?: object;
}

const { title, description, image, artDate, location, breadcrumbs, frontmatter, structuredData } = Astro.props;
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, '');
const currentUrl = Astro.url.href;
const siteUrl = Astro.site ? Astro.site.toString() : "";

/* --- Default JSON-LD Logic (Fallback) --- */
/* 記事ページ以外（トップやアーカイブ）で使われる簡易版 */
let breadcrumbList = breadcrumbs ? 
    breadcrumbs.map((crumb, index) => ({
        "@type": "ListItem",
        "position": index + 1,
        "name": crumb.label,
        "item": new URL(crumb.href.replace(/^\//, ''), siteUrl).toString()
    })) : [];

// 自動補完ロジック
if (frontmatter && !breadcrumbs) {
    breadcrumbList = [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": siteUrl },
        { "@type": "ListItem", "position": 2, "name": "Archives", "item": new URL("archives", siteUrl).toString() },
        { "@type": "ListItem", "position": 3, "name": title, "item": currentUrl }
    ];
}

/* 【重要】ハイブリッド・ロジック */
/* structuredData（記事用の完全版）があればそれを採用し、なければ簡易版(VisualArtwork/Breadcrumb)を生成 */
const finalSchemaData = structuredData || {
  "@context": "https://schema.org",
  "@graph": [
    {
        "@type": "WebPage",
        "name": title,
        "description": description,
        "image": image ? new URL(image, Astro.site).toString() : undefined,
    },
    {
        "@type": "BreadcrumbList",
        "itemListElement": breadcrumbList
    }
  ]
};

const getBreadcrumbUrl = (url: string) => {
    if (url.startsWith('http') || url.startsWith(baseUrl)) return url;
    const cleanBase = baseUrl.replace(/\/$/, '');
    const cleanUrl = url.replace(/^\//, '');
    return `${cleanBase}/${cleanUrl}`;
};
---

<!doctype html>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>✒️</text></svg>" />
        <title>{title} | Digital Old Masters</title>
        <ClientRouter />
        
        {/* 【ここが魂の注入ポイント】 */}
        <script type="application/ld+json" set:html={JSON.stringify(finalSchemaData)} />
    </head>
    <body>
        <Header />
        
        <main data-pagefind-body>
            {(breadcrumbs || (frontmatter && breadcrumbList.length > 0)) && (
                <nav class="breadcrumbs" aria-label="Breadcrumb">
                     <ol>
                        {breadcrumbs ? breadcrumbs.map((crumb, index) => (
                            <li>
                                {index === breadcrumbs.length - 1 ? (
                                    <span aria-current="page">{crumb.label}</span>
                                ) : (
                                    <a href={getBreadcrumbUrl(crumb.href)}>{crumb.label}</a>
                                )}
                            </li>
                        )) : 
                        breadcrumbList.map((crumb, index) => (
                            <li>
                                {index === breadcrumbList.length - 1 ? (
                                    <span aria-current="page">{crumb.name}</span>
                                ) : (
                                    <a href={crumb.item}>{crumb.name}</a>
                                )}
                            </li>
                        ))}
                     </ol>
                </nav>
            )}

            <slot />
        </main>

        <Footer />
    </body>
</html>