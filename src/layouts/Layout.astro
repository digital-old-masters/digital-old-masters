---
/* src/layouts/Layout.astro - Fixed Breadcrumbs Logic */
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';

interface Props {
    title: string;
    description?: string;
    image?: string;
    artDate?: string;
    location?: string;
    breadcrumbs?: { label: string, href: string }[];
    frontmatter?: any; 
}

const { title, description, image, artDate, location, breadcrumbs, frontmatter } = Astro.props;
const baseUrl = import.meta.env.BASE_URL.replace(/\/$/, '');
const currentUrl = Astro.url.href;
const siteUrl = Astro.site ? Astro.site.toString() : "";



/* --- JSON-LD生成ロジック (SEO用) --- */
/* 注: ここでは絶対パスが必要ですが、HTML表示には使いません */
let breadcrumbList = breadcrumbs ? breadcrumbs.map((crumb, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": crumb.label,
    "item": new URL(crumb.href.replace(/^\//, ''), siteUrl).toString()
})) : [];

// 自動補完ロジック
if (frontmatter && !breadcrumbs) {
    breadcrumbList = [
        {
            "@type": "ListItem",
            "position": 1,
            "name": "Home",
            "item": siteUrl
        },
        {
            "@type": "ListItem",
            "position": 2,
            "name": frontmatter.category || "Archives",
            "item": new URL("archives", siteUrl).toString()
        },
        {
            "@type": "ListItem",
            "position": 3,
            "name": title,
            "item": currentUrl
        }
    ];
}

const schemaData = {
  "@context": "https://schema.org",
  "@graph": [
    {
        "@type": "VisualArtwork",
        "name": title,
        "description": description,
        "image": image ? new URL(image, Astro.site).toString() : undefined,
        "dateCreated": artDate,
        "contentLocation": { "@type": "Place", "name": location },
        "creator": { "@type": "Person", "name": "Maestro" }
    },
    {
        "@type": "BreadcrumbList",
        "itemListElement": breadcrumbList
    }
  ]
};

/* 【追加】パンくずリスト用の安全なURL生成関数 */
/* hrefが '/' で始まる場合、ベースパスを付与します */
const getBreadcrumbUrl = (url: string) => {
    // httpで始まる外部リンクや、既にベースパスが含まれている場合はそのまま
    if (url.startsWith('http') || url.startsWith(baseUrl)) return url;
    
    // スラッシュの重複を防いで結合
    const cleanBase = baseUrl.replace(/\/$/, '');
    const cleanUrl = url.replace(/^\//, '');
    return `${cleanBase}/${cleanUrl}`;
};
---

<!doctype html>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>✒️</text></svg>" />
        <title>{title} | Digital Old Masters</title>
        <ClientRouter />
        <script type="application/ld+json" set:html={JSON.stringify(schemaData)} />
    </head>
    <body>
        <Header />
        
        <main data-pagefind-body>
            {(breadcrumbs || (frontmatter && breadcrumbList.length > 0)) && (
                <nav class="breadcrumbs" aria-label="Breadcrumb">
                    <ol>
                        {/* 【修正】 propsのbreadcrumbsがある場合は、それを優先して表示し、関数を通す */}
                        {breadcrumbs ? breadcrumbs.map((crumb, index) => (
                            <li>
                                {index === breadcrumbs.length - 1 ? (
                                    <span aria-current="page">{crumb.label}</span>
                                ) : (
                                    /* ここで getBreadcrumbUrl を使用 */
                                    <a href={getBreadcrumbUrl(crumb.href)}>{crumb.label}</a>
                                )}
                            </li>
                        )) : 
                        /* 自動生成（frontmatter）の場合のフォールバック */
                        breadcrumbList.map((crumb, index) => (
                            <li>
                                {index === breadcrumbList.length - 1 ? (
                                    <span aria-current="page">{crumb.name}</span>
                                ) : (
                                    <a href={crumb.item}>{crumb.name}</a>
                                )}
                            </li>
                        ))}
                    </ol>
                </nav>
            )}

            <slot />
        </main>

        <Footer />
    </body>
</html>