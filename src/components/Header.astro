---
const navItems = [
  { href: '/digital-old-masters/', label: 'Home' },
  { href: '#index', label: 'Index' }, // ページ下部の検索・タグへ飛ぶ
];
---

<header id="main-header">
  <div class="container">
    <a href={import.meta.env.BASE_URL} class="logo">Digital Old Masters</a>
    
    <nav class="desktop-nav">
      {navItems.map(item => (
        <a href={item.href}>{item.label}</a>
      ))}
      <a href="#search" class="search-icon" aria-label="Search">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
      </a>
    </nav>

    <button id="menu-toggle" aria-label="Menu">
      <span class="bar"></span>
      <span class="bar"></span>
    </button>
  </div>

  <nav id="mobile-menu">
    {navItems.map(item => (
      <a href={item.href}>{item.label}</a>
    ))}
  </nav>
</header>

<script>
  // ハンバーガーメニューの開閉ロジック
  const toggle = document.getElementById('menu-toggle');
  const menu = document.getElementById('mobile-menu');
  
  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('active');
    toggle.classList.toggle('active');
  });
</script>

<style>
  header {
    padding: 1.5rem 0;
    position: sticky;
    top: 0;
    background: var(--c-bg); /* 背景色と同じにして溶け込ませる */
    z-index: 100;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s;
  }
  /* スクロールしたら境界線を出す */
  :global(body.scrolled) header {
    border-bottom: 1px solid #E0Dbd0;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-family: var(--font-serif);
    font-size: 1.2rem;
    letter-spacing: 0.05em;
    color: var(--c-text);
    text-decoration: none;
    font-weight: bold;
  }

  .desktop-nav {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }
  .desktop-nav a {
    color: #666;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }
  .desktop-nav a:hover {
    color: var(--c-accent);
  }

  /* Mobile Menu Styles */
  #menu-toggle {
    display: none; /* PCでは隠す */
    background: none;
    border: none;
    cursor: pointer;
    flex-direction: column;
    gap: 4px;
  }
  .bar {
    width: 24px;
    height: 2px;
    background-color: var(--c-text);
    transition: 0.3s;
  }
  #mobile-menu {
    display: none;
    flex-direction: column;
    padding: 1rem 2rem;
    border-top: 1px solid #E0Dbd0;
  }
  #mobile-menu.active {
    display: flex;
  }

  @media (max-width: 600px) {
    .desktop-nav { display: none; }
    #menu-toggle { display: flex; }
  }
</style>